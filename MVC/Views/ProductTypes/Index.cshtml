@model IEnumerable<MVC.Models.ProductType>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_layout_admin.cshtml";
}

<h1>Index</h1>
<form asp-controller="ProductTypes" method="get" class="form-inline mt-5 mt-md-0 d-none d-lg-block">
    Trạng thái: <select name="status">
    <option value="full" selected>----Trạng thái-----</option>
    <option value="true" selected>Còn hoạt động</option>
    <option value="false">Ngừng hoạt động</option>
</select>
    <button type="submit">Tìm kiếm</button>
</form>
<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row mb-2">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-4">Account</h5>
                <div class="table-responsive">
                    <table class="table center-aligned-table">
                        <thead>
                            <tr class="text-primary">
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Details</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
