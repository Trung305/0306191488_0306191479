@model IEnumerable<MVC.Models.Product>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_layout_admin.cshtml";
}

<p>
    <a asp-action="Create">Create New</a>
</p>
@*asp-action="Search"*@
<form asp-controller="Products" method="get" class="form-inline mt-5 mt-md-0 d-none d-lg-block">

    Mã áo (SKU): <input class="form-control mr-sm-auto search" style="width:150px; height:10px " type="text" name="sku" />
    Tên sản phầm:  <input class="form-control mr-sm-1 search" style="width:150px; height:10px " type="text" name="name" />
    Khoảng giá tiền: <input class="form-control mr-sm-1 search" style="width:80px; height:10px " type="number" name="minprice" />-
    <input class="form-control mr-sm-1 search" style="width:80px" type="number" name="maxprice" />
    Loại sản phẩm <select asp-items="@ViewBag.ProductType" name="categoryID"></select>
    <button type="submit">Tìm kiếm</button>

</form>
<br />
<div class="row mb-2">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-4">Product</h5>
                <div class="table-responsive">
                    <table class="table center-aligned-table">
                        <thead>
                            <tr class="text-primary">
                                <th>
                                    @Html.DisplayNameFor(model => model.SKU)
                                </th>
                                <th>
                                    
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Price)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Stock)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ProductType)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Image)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SKU)
                                    </td>
                                    <td>
                                        
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Stock)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductType.Name)
                                    </td>
                                    <td>
                                        <img src="~/assets/pages/img/products/@Html.DisplayFor(modelItem => item.Image)" width="100" height="100" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Details</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Delete</a>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <br />
    

</div>


