
@model MVC.Models.Account
@{
    ViewData["Title"] = "Login2";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Đăng nhập</title>
    <link rel="stylesheet" href="../../node_modules/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="../../node_modules/perfect-scrollbar/dist/css/perfect-scrollbar.min.css" />
    <link rel="stylesheet" href="../../css/style.css" />
    <link rel="shortcut icon" href="../../images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid">
            <div class="row">
                <div class="content-wrapper full-page-wrapper d-flex align-items-center auth-pages">
                    <div class="card col-lg-4 mx-auto">
                        <div class="card-body px-5 py-5">
                            <h3 class="card-title text-left mb-3">Đăng nhập</h3>
                            <form asp-controller="Accounts" asp-action="Login2" method="post">
                                <div class="form-group">
                                    <input type="text" asp-for="Username" class="form-control p_input" placeholder="Tên đăng nhập">
                                </div>
                                <div class="form-group">
                                    <input asp-for="Password" type="text" class="form-control p_input" placeholder="Mật khẩu">
                                </div>
                                <div class="form-group d-flex align-items-center justify-content-between">
                                    <div class="form-check"><label><input type="checkbox" class="form-check-input">Nhớ tôi</label></div>
                                    <a href="#" class="forgot-pass">Quên mật khẩu</a>
                                </div>
                                <div class="text-center">
                                    <span>@ViewBag.ErrorMessage</span>
                                    <button type="submit" class="btn btn-primary btn-block enter-btn">ĐĂNG NHẬP</button>
                                </div>
                                <p class="Or-login-with my-3">Hoặc đăng nhập bằng</p>
                                <a href="#" class="facebook-login btn btn-facebook btn-block">Đăng nhập bằng facebook</a>
                                <a href="#" class="google-login btn btn-google btn-block">Đăng nhập bằng Google+</a>
                                <a asp-action="register" asp-controller="home" class="google-login btn btn-create-account btn-block">Tạo một tài khoản</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="../../node_modules/jquery/dist/jquery.min.js"></script>
    <script src="../../node_modules/popper.js/dist/umd/popper.min.js"></script>
    <script src="../../node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="../../node_modules/perfect-scrollbar/dist/js/perfect-scrollbar.jquery.min.js"></script>
    <script src="../../js/misc.js"></script>
</body>

</html>

