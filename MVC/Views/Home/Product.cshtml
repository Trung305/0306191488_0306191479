
@{
    ViewData["Title"] = "Shop-Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<MVC.Models.Product>
@foreach (Product p in Model)
{
    <div class="main">
        <div class="container">
            <ul class="breadcrumb">
                <li><a href="index.html">Trang chủ</a></li>
                <li><a href="">Cửa hàng</a></li>
            </ul>
            <!-- BEGIN SIDEBAR & CONTENT -->
            <div class="row margin-bottom-40">
                <partial name="_NavBar" />
                <!-- BEGIN CONTENT -->
                <div class="col-md-9 col-sm-7">
                    <div class="product-page">
                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                <div class="product-main-image">
                                    <img src="~/assets/pages/img/products/@p.Image" alt="Cool green dress with red bell" class="img-responsive" data-BigImgsrc="~/assets/pages/img/products/model7.jpg">
                                </div>
                                <div class="product-other-images">
                                    <a href="~/assets/pages/img/products/model3.jpg" class="fancybox-button" rel="photos-lib"><img alt="Berry Lace Dress" src="~/assets/pages/img/products/model3.jpg"></a>
                                    <a href="~/assets/pages/img/products/model4.jpg" class="fancybox-button" rel="photos-lib"><img alt="Berry Lace Dress" src="~/assets/pages/img/products/model4.jpg"></a>
                                    <a href="~/assets/pages/img/products/model5.jpg" class="fancybox-button" rel="photos-lib"><img alt="Berry Lace Dress" src="~/assets/pages/img/products/model5.jpg"></a>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <h1>@p.Name</h1>
                                <div class="price-availability-block clearfix">
                                    <div class="price">
                                        <strong><span>VNĐ</span>@p.Price</strong>
                                        <!--<em>$<span>62.00</span></em>-->
                                    </div>
                                    <div class="availability">
                                       Trạng thái <strong>Còn hàng</strong>
                                    </div>
                                </div>
                                <div class="description">
                                    <p>
                                        @p.Description
                                    </p>
                                </div>
                                <div class="product-page-options">
                                    <div class="pull-left">
                                        <label class="control-label">Size:</label>
                                        @*<select class="form-control input-sm">
                                            <option>S</option>
                                            <option>M</option>
                                            <option>XL</option>
                                        </select>*@
                                    </div>
                                    <div class="pull-left">
                                        <label class="control-label">Màu:</label>
                                        @*<select class="form-control input-sm">
                                            <option>Red</option>
                                            <option>Blue</option>
                                            <option>Black</option>
                                        </select>*@
                                    </div>
                                </div>
                                <div class="product-page-cart">
                                    <form asp-action="UpdateProduct" asp-controller="Home" asp-route-productid="@p.Id">
                                        <div class="product-quantity">
                                            <input type="text" name="quantity" value="1" readonly class="form-control input-sm">
                                        </div>
                                        <button class="btn btn-primary" type="submit">Thêm vào giỏ hàng</button>
                                        @*<a asp-controller="Home" asp-action="Addcart" asp-route-id="@p.Id" class="btn btn-primary" type="submit"></a>*@
                                    </form>
                                </div>
                                <div class="review">
                                    <input type="range" value="4" step="0.25" id="backing4">
                                    <div class="rateit" data-rateit-backingfld="#backing4" data-rateit-resetable="false" data-rateit-ispreset="true" data-rateit-min="0" data-rateit-max="5">
                                    </div>
                                    <a href="javascript:;">7 nhận xét</a>&nbsp;&nbsp;|&nbsp;&nbsp;<a href="javascript:;">Viết nhận xét</a>
                                </div>
                                <ul class="social-icons">
                                    <li><a class="facebook" data-original-title="facebook" href="javascript:;"></a></li>
                                    <li><a class="twitter" data-original-title="twitter" href="javascript:;"></a></li>
                                    <li><a class="googleplus" data-original-title="googleplus" href="javascript:;"></a></li>
                                    <li><a class="evernote" data-original-title="evernote" href="javascript:;"></a></li>
                                    <li><a class="tumblr" data-original-title="tumblr" href="javascript:;"></a></li>
                                </ul>
                            </div>

                            <div class="product-page-content">
                                <ul id="myTab" class="nav nav-tabs">
                                    <li><a href="#Description" data-toggle="tab">Mô tả</a></li>
                                    <li><a href="#Information" data-toggle="tab">Thiing tin</a></li>
                                    <li class="active"><a href="#Reviews" data-toggle="tab">Đánh giá (2)</a></li>
                                </ul>
                                <div id="myTabContent" class="tab-content">
                                    <div class="tab-pane fade" id="Description">
                                        <p>Mô tả sản phẩm. </p>
                                    </div>
                                    <div class="tab-pane fade" id="Information">
                                        <table class="datasheet">
                                            <tr>
                                                <th colspan="2">Additional features</th>
                                            </tr>
                                            <tr>
                                                <td class="datasheet-features-type">Giá trị 1</td>
                                                <td>21 cm</td>
                                            </tr>
                                            <tr>
                                                <td class="datasheet-features-type">Giá trị 2</td>
                                                <td>700 gr.</td>
                                            </tr>
                                            <tr>
                                                <td class="datasheet-features-type">Giá trị 3</td>
                                                <td>10 người</td>
                                            </tr>
                                            <tr>
                                                <td class="datasheet-features-type">Giá trị 4</td>
                                                <td>14 cm</td>
                                            </tr>
                                            <tr>
                                                <td class="datasheet-features-type">Giá trị 5</td>
                                                <td>nhựa</td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="tab-pane fade in active" id="Reviews">
                                        <!--<p>There are no reviews for this product.</p>-->
                                        <div class="review-item clearfix">
                                            <div class="review-item-submitted">
                                                <strong>Bob</strong>
                                                <em>30/12/2013 - 07:37</em>
                                                <div class="rateit" data-rateit-value="5" data-rateit-ispreset="true" data-rateit-readonly="true"></div>
                                            </div>
                                            <div class="review-item-content">
                                                <p>Sản phẩm tốt.</p>
                                            </div>
                                        </div>
                                        <div class="review-item clearfix">
                                            <div class="review-item-submitted">
                                                <strong>Mary</strong>
                                                <em>13/12/2013 - 17:49</em>
                                                <div class="rateit" data-rateit-value="2.5" data-rateit-ispreset="true" data-rateit-readonly="true"></div>
                                            </div>
                                            <div class="review-item-content">
                                                <p>Sản phẩm tốt.</p>
                                            </div>
                                        </div>

                                        <!-- BEGIN FORM-->
                                        <form action="#" class="reviews-form" role="form">
                                            <h2>Viết nhận xét</h2>
                                            <div class="form-group">
                                                <label for="name">Tên <span class="require">*</span></label>
                                                <input type="text" class="form-control" id="name">
                                            </div>
                                            <div class="form-group">
                                                <label for="email">Email</label>
                                                <input type="text" class="form-control" id="email">
                                            </div>
                                            <div class="form-group">
                                                <label for="review">Nhận xét <span class="require">*</span></label>
                                                <textarea class="form-control" rows="8" id="review"></textarea>
                                            </div>
                                            <div class="form-group">
                                                <label for="email">Đánh giá sao</label>
                                                <input type="range" value="4" step="0.25" id="backing5">
                                                <div class="rateit" data-rateit-backingfld="#backing5" data-rateit-resetable="false" data-rateit-ispreset="true" data-rateit-min="0" data-rateit-max="5">
                                                </div>
                                            </div>
                                            <div class="padding-top-20">
                                                <button type="submit" class="btn btn-primary">Gửi</button>
                                            </div>
                                        </form>
                                        <!-- END FORM-->
                                    </div>
                                </div>
                            </div>

                            <div class="sticker sticker-sale"></div>
                        </div>
                    </div>
                </div>
                <!-- END CONTENT -->
            </div>
            <!-- END SIDEBAR & CONTENT -->
         
        </div>
    </div>

}